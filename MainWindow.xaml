<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="File Manager" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="listBox" Margin="10,70,10,10" MouseDoubleClick="ListBox_MouseDoubleClick"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="10,45,0,0" Text="C:\" TextWrapping="Wrap" VerticalAlignment="Top" Width="680" Height="20"/>
        <Button x:Name="button_moveto" Content="Перейти" Margin="695,45,10,0" VerticalAlignment="Top" Click="Button_moveto_Click" Height="20"/>
        <Button x:Name="button_back" Content="Назад" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="95" Height="20" Click="Button_back_Click"/>

    </Grid>
</Window>
